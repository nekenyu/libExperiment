
#
# Makefile.config.incl
#

# Note: This defaults to GCC 4.7 as used in development.
# TODO: make this conditional
CXX= g++-mp-4.7
CXXFLAGS += 

INCLUDE= $(TOPDIR)/include
CXXFLAGS += -I $(INCLUDE)

ifdef DEBUG
      CXXFLAGS += -g
endif

MAKEDEPEND= $(CXX) -MM $(CXXFLAGS) -o $*.d $<

LIB_CPPUNIT_INCL= -L /opt/local/lib -lcppunit

info:
	@echo SRC=$(SRC)
	@echo DEPS=$(DEPS)
	@echo OBJS=$(OBJS)
	@echo TARGET=$(TARGET)
